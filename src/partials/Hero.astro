---
import { getImage } from 'astro:assets';
import Button from '@/components/starwind/button';
const background = await getImage({ src: import('@/assets/hero.png') });
const backgroundSrc = background.src;
---

<section id="hero" class="hero relative h-[800px] sm:h-[860px] grid">
  <div class="container mt-auto mb-15 md:mb-25 z-2 relative h-auto">
    <p class="mb-7.5 text-xl text-white">Connect, Inform, Deliver</p>
    <h1 class="text-white font-heading text-5xl lg:text-8xl font-semibold mb-6 max-w-[1080px]">
      Locally owned roofing supply company serving you since 1994
    </h1>
    <Button class="px-8">Why Riverside is the way to go?</Button>
  </div>
</section>

<style define:vars={{ background: `url('${backgroundSrc}')` }}>
  .hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--background);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: -1;
    filter: brightness(0.7);
  }
</style>
